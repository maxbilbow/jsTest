                    <!--<goals>-->
                        <!--<goal>npm</goal>-->
                    <!--</goals>-->
                    <!--<configuration>-->
                        <!--<arguments>config set proxy http://localhost:8082</arguments>-->
                    <!--</configuration>-->
                <!--</execution>-->

                <!--<execution>-->
                    <!--<id>npm set HTTPS proxy</id>-->
                    <!--<phase>generate-resources</phase>-->
                    <!--<goals>-->
                        <!--<goal>npm</goal>-->
                    <!--</goals>-->
                    <!--<configuration>-->
                        <!--<arguments>config set https-proxy https://localhost:8082</arguments>-->
                    <!--</configuration>-->
                <!--</execution>-->
            </executions>


        </plugin>

    </plugins>
</build>
</project>